{
    "plugins":["filenames-simple"],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "eqeqeq":[
            "error",
            "always"
        ],
        "filenames-simple/naming-convention":[
            "error",
            {
                "rule": "snake_case",
                "excepts": ["index"]
            }
        ],
        "camelcase":[
            "error"
            {
                "properties": "never"
            }
        ]
    }
}
