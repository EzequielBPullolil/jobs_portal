<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <script>
    function showFileType(e){
      e.preventDefault();
      const data = document.getElementById('cv').files[0]
      const formData = new FormData()

      formData.append('cv', data)
      formData.append('email', 'example')
      formData.append('message', 'example')

      fetch('http://localhost:4000/postulates/5c7340fc-5008-4a87-b2ab-244cdb92a088',
      {
        method: 'POST',
        body: formData
      })
    }
  </script>
</head>
<body>
  <form onsubmit="showFileType(event)" enctype='multipart/form-data'>
    <input  type="file" name="cv" id="cv">
    <button>send</button>
  </form>
</body>
</html>
